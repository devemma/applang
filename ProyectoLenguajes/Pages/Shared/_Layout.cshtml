<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aprender Inglés</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.css" />
    <link rel="stylesheet" href="https://bootswatch.com/_assets/css/custom.min.css" />
</head>
<body>
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
        <div class="container">
            <a asp-page="/Index" class="navbar-brand">
                <img src="~/img/lang.png" alt="" width="30" height="30" class="d-inline-block align-top">  Aprender Inglés
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Herramientas">Herramientas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Recurso">Recursos</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="download">Conceptos <span class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="download">
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-page="Estudio">Áreas de estudio</a>
                            <a class="dropdown-item" asp-page="Niveles">Niveles de inglés</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-page="Exams">Exámenes</a>
                            <a class="dropdown-item" asp-page="Info">Información</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer id="footer">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-unstyled">
                        <li class="float-lg-right"><a href="#top">Ir hacia arriba</a></li>
                        <li><a href="https://twitter.com/emmaedvs">Twitter</a></li>
                        <li><a href="https://github.com/devemma">GitHub</a></li>
                    </ul>
                    <p>Hecho por <a href="https://www.duolingo.com/profile/duoedvs">Emmanuel D. V. S.</a></p>

                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://bootswatch.com/_assets/js/custom.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
